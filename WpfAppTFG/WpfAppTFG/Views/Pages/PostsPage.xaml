<Page x:Class="WpfAppTFG.Views.Pages.PostsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppTFG.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Posts"
      Loaded="Page_Loaded">
    <Grid Background="White">
        <ScrollViewer Margin="16">
            <WrapPanel x:Name="postsContainer" Orientation="Horizontal" MouseDown="postsContainer_MouseDown" ></WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>
