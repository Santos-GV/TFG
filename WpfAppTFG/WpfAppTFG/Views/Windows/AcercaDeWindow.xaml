<Window x:Class="WpfAppTFG.Views.Windows.AcercaDeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTFG.Views.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Icon="pack://application:,,,/WpfAppTFG;component/Resources/logotipo.ico"
        Background="{DynamicResource light}"
        Title="Acerca de" Height="600" Width="480">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Style="{StaticResource textBlockMainAyuda}">ForoSaber</TextBlock>
        <TextBlock Style="{StaticResource textBlockAcercade}">Conecta, aprende, crece</TextBlock>
        <Image Style="{StaticResource Logo}"/>
        <TextBlock Style="{StaticResource textBlockAcercade}">Aprende algo nuevo cada día</TextBlock>
    </StackPanel>
</Window>
